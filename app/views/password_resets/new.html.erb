<h3 class="text-center">Reset Password</h3>
<div class="d-flex justify-content-center align-items-center index-flex container">
  <div class="col-md-7 auth-div">
    <!-- Nav tabs -->
    <div role="tabpanel" class="tab-pane active" id="password-reset">
      <%= form_with scope: :password_reset, url: reset_index_path, local: true do |f| %>
        <div class="form-group">
          <div class="">
            <%= f.email_field :email, class: "form-control", placeholder: "Email address", required: true %>
            <small id="emailHelpBlock" class="form-text text-muted">
              Enter the email address you signed up with.
            </small>
          </div>
        </div>
        <div class="form-group">
          <div class="">
            <%= f.submit 'Reset password', class: 'btn btn-primary' %>
            <%= link_to "Home", root_path, class: 'card-link margin-left' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
