<div class="d-flex justify-content-center align-items-center index-flex container">
  <div class="col-md-7">
    <!-- Nav tabs -->
    <ul class="nav nav-tabs" role="tablist">
      <li role="presentation" class="active"><a href="#sign-in" aria-controls="sign-in" role="tab" data-toggle="tab">Sign In</a></li>
      <li role="presentation"><a href="#sign-up" aria-controls="sign-up" role="tab" data-toggle="tab">Sign Up</a></li>
    </ul>
    <!-- Tab panes -->
    <div class="tab-content">
      <div role="tabpanel" class="tab-pane active" id="sign-in">
        <%= form_with scope: :session, url: login_path, local: true do |f| %>
          <div class="form-group">
            <div class="">
              <%= f.text_field :username_signin, class: "form-control", placeholder: "Username" %>
            </div>
          </div>
          <div class="form-group">
            <div class="">
              <%= f.password_field :password_signin, class: "form-control", placeholder: "Password" %>
              <small id="passwordHelpBlock" class="form-text text-muted">
                Your password must be at least 6 characters long.
              </small>
            </div>
          </div>
          <div class="form-group">
            <div class="">
              <%= f.submit 'Sign In', class: 'btn btn-primary' %>
            </div>
          </div>
        <% end %>
      </div>
      <div role="tabpanel" class="tab-pane" id="sign-up">
        <%= form_with scope: :user, local: true do |f| %>
          <%= render 'shared/error' %>
          <div class="form-row">
            <div class="col-md-6">
              <%= f.text_field :username, class: "form-control", placeholder: "Username" %>
            </div>
            <div class="col-md-6">
              <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
            </div>
            <div class="col-md-6 margin-top">
              <%= f.phone_field :phone, class: "form-control", placeholder: "Phone" %>
            </div>
            <div class="col-md-6 margin-top">
              <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
              <small id="passwordHelpBlock" class="form-text text-muted">
                Your password must be at least 6 characters long.
              </small>
            </div>
            <div class="col-md-6">
              <%= f.submit 'Register', class: 'btn btn-primary' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
