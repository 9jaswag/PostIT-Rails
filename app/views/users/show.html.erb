<% if flash[:success] %>
  <div class="alert alert-success alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= flash[:success] %>
  </div>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-sm-4">
      <h5>@<%= @user.username %></h5>
    </div>
    <div class="col-sm-8">
      <h5>Number of groups: <%= @user.groups.count %></h5>
    </div>
  </div>
</div>

