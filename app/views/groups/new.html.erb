<div class="d-flex justify-content-center align-items-center index-flex container">
  <div class="col-md-7">
    <h4 class="text-center">Create a new group</h4>

    <div class="">
      <% if @group.errors.any? %>
        <ul>
          <% @group.errors.full_messages.each do |msg| %>
            <li class="text-danger"><%= msg %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
    <%= form_with scope: :group, url: groups_path, class: "margin-top-2", local:true do |f| %>
      <div class="form-group">
        <div class="col-md-12">
          <%= f.text_field :name, required: true, class: "form-control", placeholder: "Group name" %>
          <small id="nameHelp" class="form-text text-muted">30 chars max.</small>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-12">
          <%= f.text_field :description, required: true, class: "form-control", placeholder: "Group description"  %>
          <small id="descriptionHelp" class="form-text text-muted">60 chars max.</small>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-6">
          <%= f.submit 'Create Group', class: 'btn btn-primary' %>
          <%= link_to 'Back', groups_path, class: 'btn btn-link back-btn' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

