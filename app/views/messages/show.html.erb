<div class="container">
  <% if @message %>
    <div class="row d-flex justify-content-center align-items-center index-flex">
      <div class="col-sm-7">
        <div class="card border-primary mb-3 bg-transparent message-card">
          <div class="card-header bg-transparent  border-primary">
            <span class="message-author">@<%= @message.user.username %></span>
            <span class="badge badge-<%= message_priority(@message.priority)%> float-right"><%= @message.priority %></span>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= @message.title %></h5>
            <p class="card-text"><%= @message.body %></p>
          </div>
          <div class="card-footer bg-transparent  border-primary">
            <%= link_to "Mark as read", group_message_path, class: "card-link float-right" %>
          </div>
        </div>
        <%= link_to "Back", :back, class: "btn btn-secondary" %>
      </div>
    </div>
  <% end %>
</div>
